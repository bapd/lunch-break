{
  "name": "Lunch Break",
  "version": "0.2.5",
  "images": [
    {
      "variable": "header_logo",
      "label": "Logo",
      "description": "Adds your logo to the header"
    }
  ],
  "image_sets": [
    {
      "variable": "slideshow_images",
      "label": "Homepage slideshow",
      "description": "900px by 500px images recommended",
      "defaults": [
        "slide1.png",
        "slide2.png",
        "slide3.png"
      ]
    }
  ],
  "fonts": [
    {
      "variable": "primary_font",
      "label": "Primary Font",
      "default": "Arvo"
    },
    {
      "variable": "secondary_font",
      "label": "Secondary Font",
      "default": "Open Sans"
    }
  ],
  "colors": [
    {
      "variable": "background_color",
      "label": "Background",
      "default": "#FCFCFC"
    },
    {
      "variable": "secondary_background",
      "label": "Header and Footer Background",
      "default": "#F7F7F7"
    },
    {
      "variable": "header_color",
      "label": "Headers",
      "default": "#353A21"
    },
    {
      "variable": "text_color",
      "label": "Text",
      "default": "#222222"
    },
    {
      "variable": "link_color",
      "label": "Links",
      "default": "#999999"
    },
    {
      "variable": "link_hover_color",
      "label": "Link hover",
      "default": "#000000"
    },
    {
      "variable": "button_color",
      "label": "Buttons",
      "default": "#353A21"
    },
    {
      "variable": "border_color",
      "label": "Borders",
      "default": "#E5E5E5"
    }
  ],
  "options": [
    {
      "variable": "show_search",
      "label": "Show search",
      "type": "boolean",
      "default": true,
      "description": "Shows a search field in the sidebar"
    },
    {
      "variable": "sidebar_position",
      "label": "Sidebar position",
      "type": "select",
      "options": [
        ["Left", "left"],
        ["Right", "right"]
      ],
      "default": "right",
      "description": "Positions the side navigation on the left or right of the page"
    },
    {
      "variable": "header_position",
      "label": "Header position",
      "type": "select",
      "options": [
        ["Left", "left"],
        ["Center", "center"],
        ["Right", "right"]
      ],
      "default": "center",
      "description": "Positions your store name or header image at the top of the page"
    },
    {
      "variable": "products_per_page",
      "label": "Products per page",
      "type": "select",
      "options": "1..100",
      "default": 12,
      "description": "The number of products shown per page"
    },
    {
      "variable": "products_per_row",
      "label": "Max Products per row",
      "type": "select",
      "options": "2..4",
      "default": 3,
      "description": "The max number of products displayed per row"
    },
    {
      "variable": "featured_products",
      "label": "Featured products",
      "type": "select",
      "options": "0..100",
      "default": 12,
      "description": "The number of products shown on the home page"
    },
    {
      "variable": "show_newest",
      "label": "Show newest products",
      "type": "boolean",
      "default": false,
      "description": "Shows a list of your newest products"
    },
    {
      "variable": "show_top_selling",
      "label": "Show top selling products",
      "type": "boolean",
      "default": false,
      "description": "Shows a list of your top selling products"
    },
    {
      "variable": "twitter_url",
      "label": "Twitter URL",
      "type": "text",
      "description": "Ex: http://twitter.com/bigcartel",
      "default": "http://blah.com"
    },
    {
      "variable": "facebook_url",
      "label": "Facebook URL",
      "type": "text",
      "description": "Ex: http://facebook.com/bigcartel",
      "default": "http://blah.com"
    },
    {
      "variable": "tumblr_url",
      "label": "Tumblr URL",
      "type": "text",
      "description": "Ex: http://bigcartel.tumblr.com",
      "default": "http://blah.com"
    },
    {
      "variable": "instagram_url",
      "label": "Instagram URL",
      "type": "text",
      "description": "Ex: http://instagram.com/bigcartel",
      "default": "http://blah.com"
    },
    {
      "variable": "pinterest_url",
      "label": "Pinterest URL",
      "type": "text",
      "description": "Ex: http://pinterest.com/bigcartel",
      "default": "http://blah.com"
    }
  ],
  "checkout": {
    "header_image": "{{ header_logo }}",
    "title_font": "{{ primary_font }}",
    "title_font_size": "26px",
    "title_color": "{{ header_color }}",
    "title_background_color": "transparent",
    "background_color": "{{ secondary_background }}",
    "body_font": "{{ secondary_font }}",
    "body_font_size": "14px",
    "step_border_color": "{{ border_color }}",
    "step_header_color": "{{ header_color }}",
    "step_border_width": "1px",
    "step_border_style": "solid",
    "step_border_radius": "2px",
    "step_inactive_header_color": " {{ text_color }}",
    "step_header_font": "{{ primary_font }}",
    "step_background_color": "{{ background_color }}",
    "content_background_color": "{{ background_color }}",
    "content_header_background_color": "{{ background_color }}",
    "content_header_color": "{{ text_color }}",
    "content_color": "{{ text_color }}",
    "content_header_font_size": "18px",
    "content_border_color": "transparent", 
    "content_border_radius": "0px",
    "error_background_color": "#ea4859",
    "error_color": "#ffffff",
    "error_border_radius": "0",
    "error_border_color": "#ea4859",
    "input_focus_color": "#000000",
    "input_focus_background_color": "#ffffff",
    "input_focus_border_color": "#bfbfbf",
    "input_error_border_color": "#ea4859",
    "input_color": "#000000",
    "input_error_color": "#000000",
    "input_border_color": "#bfbfbf",
    "input_background_color": "#ffffff",
    "input_error_background_color": "#ffffff",
    "input_border_radius": "2px",
    "input_font": "{{ secondary_font }}",
    "button_color": "{{ button_color }}",
    "button_border_width": "2px",
    "button_border_radius": "2px",
    "button_font": "{{ secondary_font }}",
    "button_hover_color": "{{ secondary_background }}",
    "button_background_color": "transparent",
    "button_hover_background_color": "{{ link_hover_color }}",
    "button_border_color": "{{ button_color }}",
    "button_hover_border_color": "{{ link_hover_color }}",
    "link_color": "{{ link_color }}",
    "link_hover_color": "{{ link_hover_color }}",
    "step_header_font_size": "18px",
    "summary_color": "{{ text_color }}",
    "summary_secondary_color": "{{ link_color }}",
    "summary_submit_background_color": "{{ background_color }}",
    "summary_item_border_color": "{{ border_color }}",
    "summary_item_list_border_color": "{{ border_color }}"
  }
}
